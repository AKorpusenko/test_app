<div class="container well clearfix">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">			
			<h1>Book name: </br>"<%= @book.name %>" </h1>
			<%= image_tag @book.image.url(:medium) %>
			</br>
			<ul>
				<% db_authors = Authorship.where(book_id: @book.id) %>
				<% last_author_id = Authorship.where(book_id: @book.id).last.author_id %>
				<% last_db_author = Author.find_by(id: last_author_id) %>
				<% db_authors.each do |a| %> 
				  <% tmp_author = Author.find_by(id: a.author_id) %>
				  <% if tmp_author != nil %>
				  	<li><%= link_to tmp_author.name, :controller => 'authors', :action => :show, :id => tmp_author.id %></li>
				  <% end %>
				<% end %>
			</ul>
			</br>
			<%= link_to 'Edit', edit_book_path, class: :'btn btn-primary btn-block' %>
			<%= link_to 'Back', books_path, class: :'btn btn-primary btn-block'  %>
		</div>
	</div>
</div>